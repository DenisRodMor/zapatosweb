@model IEnumerable<entidades.PA_Tallas_MostrarDetalle_Result>

@{
    ViewBag.Title = "listartallas";
}

<h2>Lista Tallas</h2>

<p>
    @Html.ActionLink("Nuevo", "agregatallas")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdTalla)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DscTalla)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdTalla)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DscTalla)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Modificar", new { id=item.IdTalla }) |
            @Html.ActionLink("Detalles", "Detalles", new { id = item.IdTalla }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.IdTalla })
        </td>
    </tr>
}

</table>
