@model IEnumerable<entidades.PA_Clientes_MostrarDetalle_Result>

@{
    ViewBag.Title = "Clientes";
}

<h2>Lista Clientes</h2>

<p>
    @Html.ActionLink("Nuevo Cliente", "agregaclientes")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ap1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ap2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ap1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ap2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.ActionLink("Modificar", "actualizaclientes", new { id=item.IdCliente }) |
            @Html.ActionLink("Detalle", "detalleclientes", new { id = item.IdCliente }) |
            @Html.ActionLink("Eliminar", "eliminaclientes", new { id = item.IdCliente })
        </td>
    </tr>
}

</table>
